# include <iostream>
using namespace std;

int main() {

  char a;
  float num1, num2;

  cout << "Enter the first number: "<<endl;
  cin >> num1;

  cout << "Type the operation which do you want to perform: +, -, *, /: "<<endl;
  cin >> a;

  cout << "Enter the second number: "<<endl;
  cin >> num2;

  switch(a) {

    case '+':
      cout << num1 << " + " << num2 << " = " << num1 + num2;
      break;

    case '-':
      cout << num1 << " - " << num2 << " = " << num1 - num2;
      break;

    case '*':
      cout << num1 << " * " << num2 << " = " << num1 * num2;
      break;

    case '/':
      cout << num1 << " / " << num2 << " = " << num1 / num2;
      break;

    default:
      cout << "Error! Type the correct operation.";
      break;
  }
}
